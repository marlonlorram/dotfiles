# Global aliases
alias zshconfig="vim ~/.zshrc"  # Open .zshrc file with vim
alias cl="clear"  # Clear terminal
alias mkdir="mkdir -p"  # Create directory and parent directories as needed
alias f="open ."  # Open current directory
alias code="codium"  # Use codium as code editor
alias dotfiles="code ~/dotfiles"  # Open dotfiles with codium
alias k="kill -9"  # Force kill process

# Yarn aliases
alias yh="yarn install --silent --non-interactive && yarn hot"
alias yd="yarn install --silent --non-interactive && yarn dev"
alias yl="yarn install --silent --non-interactive && yarn lint"
alias yui="yarn upgrade-interactive --latest"

# Sudo alias
alias please='sudo $(fc -ln -1)'  # Run last command as superuser

# Flush Directory Service cache
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"

# Git aliases
alias gau="git add -u"
alias gd="git diff --color-words=."
alias gst="clear && git status"
alias gs="gst"
alias gsu="clear && git status -u"
alias nah="git reset --hard HEAD && git clean -fd"
alias undo="git reset HEAD\^"
alias wip='stage_all_changes; remove_deleted_files; commit_changes'
alias gop="git open"
alias tigd="tig master..HEAD --first-parent --no-merges"
alias gdc="git diff --cached"

# Vagrant aliases
alias vd="vagrant destroy"
alias vgs="vagrant global-status"
alias vh="vagrant halt"
alias vp="vagrant provision"
alias vs="vagrant status"
alias vu="vagrant up"

# Docker aliases
alias dps="docker ps"
alias dc="docker-compose"
alias dcup="docker-compose up -d"
alias dcd="docker-compose down"
